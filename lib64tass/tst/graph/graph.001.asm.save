

.cpu  '6502'
.enc  'none'

; ---- basic program with sys call ----

; [start address]

* = $0801
    ;           [line]
	.word  (+), 2022
    ;      [sys]                                     [rem]     [desc]
	.null  $9e, format(' %d ', program_entry_point), $3a, $8f, ' prg'
+	.word  0

program_entry_point	; assembly code starts here

	jmp main.start

;--------------------------------------------------------------- lib

.include "../../lib/libC64.asm"
.include "../../lib/libMath.asm"
.include "../../lib/libSTDIO.asm"
.include "../../lib/libConv.asm"
.include "../../lib/libString.asm"
.include "../../lib/libGraph.asm"

;--------------------------------------------------------------- main

main	.proc

    start	.proc


        ;   set_bitmap_mode_on
        ;     76543210
        lda 53265       ;   D011    53265
        ora #%00100000  ;     20       32
        sta 53265
        ;   set_bitmap_mode_multicolor_off
        ;     76543210
        lda 53270       ;   D016    53270
        and #%11101111  ;     ef       239
        sta 53270
        ;   set_text_mode_extended_off
        ;     76543210
        lda 53265       ;   D011    53265
        and #%10111111  ;     bf      191
        sta 53265
jmp xxx
    
set_screen_bitmap_addr_on
        
            ;   set screen bitmap address
                            ;	7654:3210	(53272)		
            lda #%00111000	;	0011:1000
            sta	$d018	    ;	%100u,  4: $2000-$3FFF, 8192-16383.	pointer to bitmap memory
                            ;	%0011,  3: $0C00-$0FFF, 3072-4095.	Pointer to screen memory
xxx

set_screen_bitmap_addr_off
            ;   set screen bitmap address
                            ;	7654:3210	(53272)		
            lda #%00011000  ;	0001:1000
            sta	$d018	    ;	%100u,  4: $2000-$3FFF, 8192-16383.	pointer to bitmap memory
                            ;	%0001,  3: $0400-$0FFF, 1024-2048.	Pointer to screen memory
        
        jsr graph.clear

        ; stop graph
        ;jsr c64.set_bitmap_mode_320x200_off
        
        rts
        
    .pend

.pend

